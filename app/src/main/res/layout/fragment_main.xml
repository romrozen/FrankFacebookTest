<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.FaceBookWelcomeFragment"
    android:background="@android:color/white"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frank_logo"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/fragment_main_friends_list_btn"
        android:layout_marginBottom="40dp"
        />


    <ImageView
        android:id="@+id/fragment_main_friends_list_btn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/facebook_friends"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />


</RelativeLayout>